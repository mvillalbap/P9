<table>
	<form method='get' action='/quizzes'>
		<tr>
			<td>
				<input type='text' placeholder='Buscar' name='search' />
			</td>
			<td>
				<input type='submit' value='Buscar' />
			</td>
		</tr>
	</form>
	<% for (var i in quizzes) { %>

		<tr>
			<td>
				<a href='/quizzes/<%= quizzes[i].id %>'><%= quizzes[i].question %></a>
			</td>
			<td><a href='/quizzes/<%= quizzes[i].id %>/edit'><button type='button'>Editar</button></a></td>
			<td><a href="/quizzes/<%= quizzes[i].id %>?_method=DELETE" onclick="return confirm('Borrar: <%= quizzes[i].question %>');"><button>Borrar</button></a></td>
		</tr>

	<% } %>
</table>

<p><a href='/quizzes/new'><button type='button'>Crear pregunta</button></a></p>